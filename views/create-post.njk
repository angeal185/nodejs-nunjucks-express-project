{% extends 'layout.njk' %}
{% block content %}
<div class="section">
  <div class="container">
    <form method="post" enctype="multipart/form-data" autocomplete="off" novalidate="novalidate" class="form-horizontal create-form profile-form">
      <input type="hidden" name="action" value="create-post"/>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="form-group">
            <h1>Create a blog post</h1>
            <input type="text" id="post-title" name="title" placeholder="Post title" class="input input-xl input-faded"/>
          </div>
          <div class="form-group">
            <label>Upload image</label>
            <input type="file" name="image_upload"/>
          </div>
          <div class="form-group">
            <label>Post content</label>
            <textarea name="content.extended" class="wysiwyg input input-faded"></textarea>
          </div>
          <div class="form-group">
            <button type="submit" data-loading-text="Changing..." class="btn btn-lg btn-primary btn-block">Create post</button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
{% endblock %}
{% block scripts %}
<script src="/js/lib/bootstrap/button.js"></script>
<script src="/js/lib/tinymce/tinymce.min.js"></script>
<script src="/js/lib/tinymce/jquery.tinymce.min.js"></script>
<script>
<script>
  jQuery(function($) {
  	$( "#post-title" ).focus();
  	tinymce.init({
  		selector: 'textarea.wysiwyg',
  		menubar: false,
  		height: 400,
  		plugins: [ 'code', 'link' ],
  		toolbar: 'bold italic | alignleft aligncenter alignright | bullist numlist | outdent indent | link | code',
  		skin: 'keystone'
  	});
  });
</script>
</script>
{% endblock %}